# DPLUS Dashboard - Environment Configuration
# Copy this file to .env and customize for your deployment

# ============================================
# Dashboard Configuration
# ============================================

# Port for the dashboard (default: 8501)
DASHBOARD_PORT=8501

# ============================================
# Security
# ============================================

# Custom application password (optional)
# If not set, default password is: dplus2024
# To generate a new hash: echo -n "your_password" | sha1sum
# APP_PASSWORD=your_secure_password_here

# ============================================
# Streamlit Configuration (Advanced)
# ============================================

# Server settings
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=false

# Logger level: critical, error, warning, info, debug
STREAMLIT_LOGGER_LEVEL=info

# Maximum upload size (MB)
STREAMLIT_SERVER_MAX_UPLOAD_SIZE=200

# ============================================
# Data Configuration (Optional)
# ============================================

# Path to original data files (if mounted)
# DATA_PATH=/app/data/original

# Auto-refresh interval (seconds)
# AUTO_REFRESH_INTERVAL=60
